<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav" />

    <Button
        android:id="@+id/btnOpenFirstFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnOpenFirstFragmentOnclick"
        android:text="Open 1" />

    <Button
        android:id="@+id/btnOpenSecondFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnOpenFirstFragment"
        android:onClick="btnOpenSecondFragmentOnClick"
        android:text="Open 2" />

    <Button
        android:id="@+id/btnOpenThirdFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnOpenSecondFragment"
        android:onClick="btnOpenThirdFragmentOnClick"
        android:text="Open 3" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#A88850"
        app:menu="@menu/bottom_nav" />

</RelativeLayout>