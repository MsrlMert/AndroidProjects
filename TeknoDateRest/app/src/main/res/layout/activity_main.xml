<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnGetCityId"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="get city Ä±d" />

        <Button
            android:id="@+id/btnGetCityWeatherById"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="get city weather by id" />


        <Button
            android:id="@+id/btnGetCityWeatherByName"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get city weather by name" />


    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerCities"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewCityId"
        android:textAlignment="center"
        android:hint="This is City ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/editTextEnter"
        android:inputType="number"
        android:layout_marginTop="50dp"
        android:hint="Enter "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSearch"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"/>

    <ListView
        android:id="@+id/listViewCitiesWeather"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>