<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_activity_text_layout_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/register_activity_edit_text_user_name"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="Enter Your Name"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_activity_text_layout_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_activity_text_layout_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/register_activity_edit_text_user_email"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_activity_text_layout_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_activity_text_layout_user_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/register_activity_edit_text_user_password"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:hint="Enter Your Password"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/activity_register_btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_activity_text_layout_user_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="activity_register_btn_sign_inOnClick"
        android:text="Sign In" />


</RelativeLayout>