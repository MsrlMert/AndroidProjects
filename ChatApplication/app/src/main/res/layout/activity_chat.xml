<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChatActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/chat_activity_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:background="@android:color/transparent"
                    android:id="@+id/chat_activity_img_back"
                    android:layout_width="wrap_content"
                    android:onClick="imgBtnBackOnClick"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_24" />


                <TextView
                    android:id="@+id/chat_activity_friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/chat_activity_img_back"
                    android:text="Merhaba"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/chat_activity_friend_last_login_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/chat_activity_friend_name"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_activity_recycler_view"
        android:layout_below="@id/chat_activity_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chat_activity_edit_text_message"/>


    <EditText
        android:id="@+id/chat_activity_edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/chat_activity_message_add_img_view"/>

    <ImageView
        android:id="@+id/chat_activity_message_add_img_view"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/chat_activity_img_view_send_message"
        android:layout_height="56dp"
        android:src="@drawable/ic_baseline_add_box_48"/>


    <ImageView
        android:onClick="imgViewMessageSend"
        android:id="@+id/chat_activity_img_view_send_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:src="@drawable/ic_baseline_send_48"/>

</RelativeLayout>