        android:supportsRtl="true"
        android:theme="@style/Theme.MEF_IDP_Project">
        <activity android:name=".Activities.VoicerActivities.RecordPlayerActivity"></activity>
        <activity android:name=".Activities.VoicerActivities.RecordActivity" />
        <activity android:name=".Activities.VoicerActivities.MainActivityVoicer" />
        <activity android:name=".Activities.RegisterActivity" />
        <activity android:name=".Activities.UserActivities.MainActivityUser" />
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>