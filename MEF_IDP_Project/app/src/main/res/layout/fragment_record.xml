<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/fragment_record_img_view"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/person_illus" />

    <TextView
        android:id="@+id/fragment_record_text_view_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_img_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="deneme" />

    <TextView
        android:id="@+id/fragment_record_text_view_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_text_view_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="deneme" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/fragment_record_spinner_lessons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_text_view_user_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/fragment_record_text_view_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_spinner_lessons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Kayıt için mikrofon \ntuşuna basın"
        android:textSize="25sp" />

    <Chronometer
        android:id="@+id/fragment_record_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_text_view_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="52sp" />

    <ImageView
        android:id="@+id/fragment_record_img_view_record_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_text_view_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/fragment_record_chronometer"
        android:src="@drawable/ic_baseline_history_72" />




    <ImageView
        android:id="@+id/fragment_record_img_view_record_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_chronometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_button"/>
<!--        android:src="@drawable/ic_baseline_mic_red_64"/>-->

    <ImageView
        android:id="@+id/fragment_record_img_view_record_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/fragment_record_chronometer"
        android:layout_toRightOf="@id/fragment_record_img_view_record_voice"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_baseline_save_64" />





</RelativeLayout>