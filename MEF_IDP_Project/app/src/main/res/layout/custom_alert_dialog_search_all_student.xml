<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/custom_alert_dialog_search_all_student_text_view_user_name"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/custom_alert_dialog_search_all_student_text_view_user_email"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:layout_toRightOf="@id/custom_alert_dialog_search_all_student_text_view_user_name"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/custom_alert_dialog_search_all_student_btn_match_student"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/custom_alert_dialog_search_all_student_text_view_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eşleştirme Yap"/>



</RelativeLayout>