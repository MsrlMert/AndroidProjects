<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">


    <TextView
        android:id="@+id/register_activity_text_view_user_name"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Kullanıcı Adı :" />


    <EditText
        android:id="@+id/register_activity_edit_text_user_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/register_activity_text_view_user_name"
        android:inputType="textPassword" />


    <TextView
        android:id="@+id/register_activity_text_view_user_email"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@id/register_activity_text_view_user_name"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="E-posta :" />

    <EditText
        android:id="@+id/register_activity_edit_text_user_email"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/register_activity_edit_text_user_name"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/register_activity_text_view_user_email"
        android:inputType="textEmailAddress" />


    <TextView
        android:id="@+id/register_activity_text_view_user_password"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@id/register_activity_text_view_user_email"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Şifre :" />

    <EditText
        android:id="@+id/register_activity_edit_text_user_password"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/register_activity_edit_text_user_email"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/register_activity_text_view_user_password"
        android:inputType="textPassword" />



    <TextView
        android:id="@+id/register_activity_text_view_voicer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_activity_text_view_user_password"
        android:text="Seslendirici"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/register_activity_check_box"
        android:layout_below="@id/register_activity_text_view_user_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/register_activity_text_view_voicer"
        android:layout_marginTop="55dp"
        android:layout_width="80dp"
        android:layout_height="20dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/register_activity_spinner"
        android:layout_marginTop="25dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_activity_text_view_voicer"/>



    <Button
        android:id="@+id/register_activity_btn_register"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/register_activity_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Kayıt Ol" />


</RelativeLayout>