<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fragments.ProfileFragment">

   <ImageView
       android:id="@+id/fragment_profile_user_img"
       android:layout_centerHorizontal="true"
       android:layout_width="140dp"
       android:layout_height="90dp"/>

    <TextView
        android:id="@+id/fragment_profile_user_email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_profile_user_img"
        android:layout_width="120dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/fragment_profile_checkbox_put_location"
        android:layout_below="@id/fragment_profile_user_email"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Konumu GÃ¶nder"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fragment_profile_switch"
        android:layout_below="@id/fragment_profile_user_email"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/fragment_profile_checkbox_put_location"/>

</RelativeLayout>